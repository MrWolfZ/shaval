{
  "name": "@shaval/platform",
  "description": "simple unobtrusive object parsing and validation for JavaScript and TypeScript",
  "scripts": {
    "build": "lerna run build --no-bail --stream --ignore @shaval/recipes.*",
    "build:ci": "lerna run build:ci --no-bail --stream --ignore @shaval/recipes.*",
    "build:composite": "tsc -b tsconfig.composite.build.json tsconfig.composite.test.json tsconfig.composite.recipes.json",
    "build:watch": "tsc -b tsconfig.composite.build.json tsconfig.composite.test.json tsconfig.composite.recipes.json -w",
    "lint": "lerna run lint --no-bail --parallel --ignore @shaval/recipes.*",
    "lint:ci": "lerna run lint:ci --no-bail --parallel --ignore @shaval/recipes.*",
    "test": "lerna run test --no-bail --parallel --ignore @shaval/recipes.*",
    "test:ci": "lerna run test:ci --no-bail --parallel --ignore @shaval/recipes.*",
    "tsd": "lerna run tsd --no-bail --parallel --ignore @shaval/recipes.*",
    "report-coverage": "lerna run report-coverage --no-bail --parallel=false --ignore @shaval/recipes.*",
    "prepare-release": "yarn build && yarn lint && yarn test && lerna version --conventional-commits --conventional-graduate=* --yes --exact --force-publish=* && yarn build",
    "publish-release": "lerna run publish:custom --no-bail --parallel -- --otp",
    "prepare-prerelease": "yarn build && yarn test && lerna version --conventional-commits --conventional-prerelease=* --yes --exact --force-publish=* && yarn build",
    "publish-prerelease": "lerna run publish:custom --no-bail --parallel -- --tag next --otp",
    "precommit": "node ./scripts/pre-commit-hook.js",
    "build:config": "tsc -p ./tsconfig.config.json",
    "lerna:bootstrap": "lerna bootstrap",
    "postinstall": "yarn lerna:bootstrap",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MrWolfZ/shaval.git"
  },
  "private": true,
  "workspaces": [
    "packages/*",
    "recipes/*/*"
  ],
  "keywords": [
    "shaval",
    "schema",
    "shape",
    "validation",
    "validate",
    "validating",
    "parser",
    "parse",
    "parsing",
    "javascript",
    "typescript"
  ],
  "author": "Jonathan Ziller <jonathan.ziller@gmail.com> (https://www.github.com/MrWolfZ)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MrWolfZ/shaval/issues"
  },
  "homepage": "https://github.com/MrWolfZ/shaval#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@microsoft/api-extractor": "^7.15.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.21",
    "@types/pretty-time": "^1.1.0",
    "@types/shelljs": "^0.8.8",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "chalk": "^4.1.1",
    "codecov": "^3.8.1",
    "eslint": "^7.25.0",
    "eslint-plugin-shaval": "file:./.eslint",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-silent-reporter": "^0.5.0",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "pretty-time": "^1.1.0",
    "rollup": "^2.46.0",
    "shelljs": "^0.8.4",
    "sorcery": "^0.10.0",
    "staged-git-files": "^1.2.0",
    "ts-jest": "^26.5.5",
    "tsd": "^0.14.0",
    "typescript": "^4.2.4",
    "uglify-js": "^3.13.5"
  }
}
